@model IEnumerable<ARS.Models.TicketReserve_tbl>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    h2 {
        text-align: center;
        font-weight: bolder;
        color: black;
    }
    .btn .btn-block {
        /* Your custom styles go here */
        background-color: #3498db;
        color: #fff;
        border-radius: 5px;
        padding: 10px;
        /* Add any other styles you want */
    }
       
   

</style>


<h2>Index</h2>



<center><h1>Flight Ticket Booking</h1></center>
@{
    Html.BeginForm("Search", "FlightBook", "Index");
}

<center>
    <table>
        <tr>
            <th>Form</th>
            <th>To</th>
            <th>Date</th>
        </tr>
        <tr>
            <td>
                <datalist id=rcity>
                    @foreach (var item in ViewBag.dcity)
                    {
                        <option>@item</option>
                    }
                </datalist>
                <input type="text" name="cityform" class="city1" placeholder="Type Departure City" required="" list="rcity">
            </td>

            <td>
                <datalist id=acity>
                    @foreach (var item in ViewBag.acity)
                    {
                        <option>@item</option>
                    }
                </datalist>
                <input type="text" name="cityto" class="city2" placeholder="Type Departure City" required="" list="acity">
            </td>

            <td>
                <input name="date1" type="date" onfocus="this.value = '';" onblur="if (this.value == '') { this.value = 'mm/dd/yyyy'; }" required="">
            </td>
        </tr>

    </table>

</center>
<div class="clear"></div>
<input type="submit" value="Search Flights" class="btn btn-block">
